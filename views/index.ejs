<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-dark">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %> <%# Percorre todo a variavel json %> 
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <%# o botao redireciona para a pagina de cada pergunta %> 
                   <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a> 
                </div>
            </div>
            
        <%})%>
    </div>
</body>
<%- include('partials/footer.ejs') %>