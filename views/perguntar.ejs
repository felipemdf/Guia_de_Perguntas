<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Realizar Pergunta</h3>
            </div>
            <div class="card-body">
                <%# GET passa os dados via query params na url oque não é seguro pois da para ver %> 
                <%# POST os dados são passados dentro da requisição escondido do usuario  %> 
                <form method="POST" action="/salvarpergunta"> <%# o action define a rota a ser enviado os dados %> 
                    <label>Título</label>
                    <input class="form-control" type="text" placeholder="Título" name="titulo">
                    
                    <br><label>Descrição</label>
                    <textarea class="form-control" placeholder="Descreva sua pergunta" name="descricao"></textarea>
                    <br>
                   
                    <button class="btn btn-dark">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('partials/copyright.ejs') %>
</body>
